<div class"row mt-5">
	<h1> Register Here</h1>
	<div class="card card-body">
		<form action="/users/register" method="POST">
		<div class="form">
			<label for="name">Name:</label>
			<input 
				type="name"
				id="name"
				name="name"
				class="form-control"
				placeholder="NAME"
				value="<%= typeof name != 'undefined' ? name : '' %>"
				/>
		</div>
		<div class="form">
			<label for="email">Email:</label>
			<input 
				type="email"
				id="email"
				name="email"
				class="form-control"
				placeholder="EMAIL"
				value="<%= typeof email != 'undefined' ? email : '' %>"
				/>
		</div>
		<div class="form">
			<label for="password">Password:</label>
			<input 
				type="password"
				id="password"
				name="password"
				class="form-control"
				placeholder="PASSWORD"
				value="<%= typeof password != 'undefined' ? password : '' %>"
				/>
		</div>
		<div class="form">
			<label for="password2">Confirm Password:</label>
			<input 
				type="password"
				id="password2"
				name="password2"
				class="form-control"
				placeholder="CONFIRM PASSWORD"
				value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
				/>
		</div>
		<button type="submit" class="button"> Login</button>
	</form>
	</div>
	<p class="lead mt-1"> Have an account? <a href="/users/login"> Login</a></p>
</div>