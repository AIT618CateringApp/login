<div class"row mt-5">
	<h1> Please Login </h1>
	<%# // SHOWING ERRORS \\  */%> 
		<% if(typeof check != 'undefined') { %>
			<% check.forEach(function(err) { %>
				<%= err.message %>
			<% }); %>
		<% } %>
	<%# // ^^ ERRORS \\  */%> 
	<div class="card card-body">
		<form action="/users/login" method="POST">
		<div class="form">
			<label for="email">Email:</label>
			<input 
				type="email"
				id="email"
				name="email"
				class="form-control"
				placeholder="EMAIL"
				value="<%= typeof email != 'undefined' ? email : '' %>"
				/>
		</div>
		<div class="form">
			<label for="password">Password:</label>
			<input 
				type="password"
				id="password"
				name="password"
				class="form-control"
				placeholder="PASSWORD"
				value="<%= typeof password != 'undefined' ? password : '' %>"
				/>
		</div>
		<button type="submit" class="button"> Login</button>
	</form>
	</div>
	<p class="lead mt-1"> Need an account? <a href="/users/register"> Register</a></p>

</div>